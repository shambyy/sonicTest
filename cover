define :chorus do
  
  use_synth :tech_saws
  use_bpm 60
  play :As4, release: 0.5
  sleep 0.4
  play :C5, release: 1.7
  sleep 0.4
  play :Cs5, release: 1.65
  sleep 0.6
  play :Cs5, release: 1
  sleep 0.2
  play :Cs5, release: 1
  sleep 0.2
  play :Cs5, release: 1.3
  sleep 0.3
  play :C5, release: 1
  sleep 0.5
  
  use_synth :tech_saws
  play :As4, release: 1
  sleep 0.35
  play :Gs4, release: 1
  sleep 0.2
  play :Gs4, release: 2
  sleep 0.35
  play :As4, release: 0.7
  sleep 0.4
  play :C5, release: 0.7
  sleep 0.4
  play :As4, release: 1
  sleep 0.5
  
end

